body,nav ul li a{color:#fff;width:100%}nav ul li,nav ul li a{z-index:10;position:relative}.site-body,nav ul li,nav ul li a{position:relative}body{margin:0;font-size:1.2em;text-align:center;letter-spacing:.5em;text-transform:uppercase;font-family:Lato,sans-serif;background:url(bg.jpeg) center center no-repeat fixed;background-size:cover}p{width:60%;margin:20px auto;letter-spacing:1px;text-transform:none}span{font-weight:300}.site-body{width:100%;min-height:100%;background:rgba(0,0,0,.5)}nav{margin:0 auto;padding:50px 0}nav ul{width:100%;padding:0}nav ul li{width:15%;min-width:180px;display:inline-block;margin:20px;border:2px solid #fff}nav ul li:after{content:" ";width:0;bottom:0;left:0;right:0;height:100%;z-index:-1;margin:0 auto;position:absolute;background:#fff;transition:width .2s}nav ul li:hover:after{width:100%}nav ul li a{height:100%;padding:10px 0;display:block;text-decoration:none;font-size:.8em}.container,.panel{display:table;width:100%}nav ul li a:hover{color:#000}.container{height:100vh}.panel-inner,.site-info{display:table-cell;vertical-align:middle}.site-info{width:100%;margin:0 auto}@media only screen and (min-device-width:320px) and (max-device-width:480px) and (-webkit-min-device-pixel-ratio:2){body{font-size:1em}span{font-size:.8em}li{display:block}p{width:80%;text-align:left}}